{% extends '_layouts/base.njk' %}


{% block page_title %} Tour Dates {% endblock %}

{% block content %}
<h1> Queen + Adam Lambert </h1>
<h2> 2020 Tour Dates </h2>
<div class="row">
  <div class="column border left" style="background-color: #FF69B4;">
    <h4>Date</h4>
  </div>
  <div class="column border left" style="background-color: #FF69B4;">
    <h4>City</h4>
  </div>
  <div class="column border left" style="background-color: #FF69B4;">
    <h4>Venue</h4>
  </div>
</div>

{% for tourdates in tourdates.tourdates %}
<div class="row">
  <div class="column border left" style="background-color: #FFFAFA;">
    <p> {{ tourdates.date }} </p>
  </div>
  <div class="column border left" style="background-color:#FFFAFA;">
    <p> {{tourdates.city}} </p>
  </div>
  <div class="column border left" style="background-color:#FFFAFA;">
    <p> {{ tourdates.venue}} </p>
  </div>
</div>

{% endfor %}

{% endblock %}